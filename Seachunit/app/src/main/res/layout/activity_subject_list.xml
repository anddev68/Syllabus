<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubjectListActivity"
    android:orientation="vertical"
    android:background="@drawable/repeat_bg100_01"
    android:id="@+id/root">


    <TextView
        android:text="教科一覧"
        android:id="@+id/textView2"
        android:background="@drawable/btn039_01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/header"
        android:gravity="center" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subject_list"
        android:layout_weight="1"
        android:dividerHeight="1sp"
        android:divider="#999999" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="現在の設定："
        android:id="@+id/system_mes"
        android:background="#dddddd" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#cc999999">

        <LinearLayout
            style="@style/navbutton_layout"
            android:id="@+id/lbutton1">

            <ImageView
                style="@style/navbutton_image"
                android:src="@android:drawable/ic_menu_info_details" />

            <TextView
                style="@style/navbutton_text"
                android:text="詳細表示" />
        </LinearLayout>

        <LinearLayout
            style="@style/navbutton_layout"
            android:id="@+id/lbutton2">

            <ImageView
                style="@style/navbutton_image"
                android:src="@android:drawable/ic_menu_edit" />

            <TextView
                style="@style/navbutton_text"
                android:text="点数編集" />
        </LinearLayout>

        <LinearLayout
            style="@style/navbutton_layout"
            android:id="@+id/lbutton3">

            <ImageView
                style="@style/navbutton_image"
                android:src="@android:drawable/ic_menu_gallery" />

            <TextView
                style="@style/navbutton_text"
                android:text="シラバス" />
        </LinearLayout>

        <LinearLayout
            style="@style/navbutton_layout"
            android:id="@+id/lbutton4">

            <ImageView
                style="@style/navbutton_image"
                android:src="@android:drawable/ic_menu_manage" />

            <TextView
                style="@style/navbutton_text"
                android:text="設定" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
