<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- dialogのテーマ -->
        <item name="alertDialogProTheme">@style/Theme.AlertDialogPro.Material</item>


    </style>




    <!-- 共通ヘッダー -->
    <style name="header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <!-- 共通コンテンツ -->
    <style name="contents">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#fcf9f0</item>
    </style>

    <!-- header of DetailActivity -->
    <style name="header_detail">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#aaaaaa</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_gravity">fill</item>
    </style>

    <!-- table header of DetailActivity -->
    <style name="th_detail">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#aaaaaa</item>
        <item name="android:textSize">22sp</item>
        <item name="android:layout_margin">10dp</item>
    </style>


    <!-- table data of DetailActivity -->
    <style name="td_detail">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 横線 -->
    <style name="hr">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#000000</item>
    </style>

    <!-- 縦線 -->
    <style name="vr">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">#000000</item>

    </style>


    <!-- 画像ボタン用外枠 -->
    <style name="navbutton_layout">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">#00000000</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginRight">2dp</item>
    </style>

    <!-- 画像ボタン用画像 -->
    <style name="navbutton_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#00000000</item>
    </style>

    <!-- 画像ボタン用テキスト -->
    <style name="navbutton_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">#00000000</item>
    </style>





    <!-- 数値ボタン -->
    <style name="numbutton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:background">@drawable/numbutton_bg</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">40dp</item>
        <item name="android:onClick">onClickNumber</item>
        <item name="android:layout_margin">2dp</item>
    </style>

</resources>
